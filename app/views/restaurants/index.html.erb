<h1>All Restaurants</h1>

<button><p><%= link_to "Home", pages_homepage_url %></p></button>
<% @restaurants.each do |restaurant| %>
  <p><%= restaurant.name %>, <%= restaurant.phone_number %></p>
  <p><%= link_to "View", restaurant %></p>
  <p><%= restaurant.capacity %>, <%= restaurant.description %>, <%= restaurant.category %></p>
  <p><%= link_to "Make a Reservation", new_restaurant_reservation_path(restaurant) %></p>
  <img src="<%= restaurant.picture %>">
<% end %>
