<%= form_for(@restaurant) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_area :email%>
  </div>
  <div class="field">
    <%= f.label :picture%><br />
    <%= f.text_field :picture %>
  </div>
  <div class="field">
    <%= f.label :description%><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :capacity%><br />
    <%= f.number_field :capacity %>
  </div>
  <div class="field">
    <%= f.label :category%><br />
    <%= f.text_field :category %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>